mod.web_layout.BackendLayouts {
    default {
        title = Standard
        config {
            backend_layout {
                colCount = 1
                rowCount = 2
                rows {
                    1 {
                        columns {
                            1 {
                                name = Stage
                                colPos = 0
                            }
                        }
                    }

                    2 {
                        columns {
                            1 {
                                name = Inhalte
                                colPos = 1
                            }
                        }
                    }
                }
            }
        }
    }
    TwoColumns {
        title = Zwei Spalten
        config {
            backend_layout {
                colCount = 3
                rowCount = 2
                rows {
                    1 {
                        columns {
                            1 {
                                name = Stage
                                colPos = 0
                                colspan = 3
                            }
                        }
                    }
                    2 {
                        columns {
                            1 {
                                name = Hauptspalte
                                colPos = 1
                                colspan = 2
                            }
                            2 {
                                name = Seitenleiste
                                colPos = 2
                                colspan = 1
                            }
                        }
                    }
                }
            }
        }
    }
}

